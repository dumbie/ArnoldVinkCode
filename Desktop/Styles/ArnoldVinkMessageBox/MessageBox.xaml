<Window x:Class="ArnoldVinkCode.AVMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Messagebox"
        Topmost="True"
        WindowStyle="None" 
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MouseDown="Window_MouseDown"
        Background="Transparent">

    <!-- ListboxItemString -->
    <Window.Resources>
        <DataTemplate x:Key="ListBoxItemString">
            <Border CornerRadius="2" Background="{DynamicResource ApplicationAccentLightBrush}" Cursor="Hand">
                <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeSmall}"/>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Grid - MessageBox -->
    <Border CornerRadius="2" BorderThickness="2" BorderBrush="{DynamicResource ApplicationAccentLightBrush}" Background="{DynamicResource ApplicationWhiteBrush}" MaxWidth="600">
        <StackPanel Margin="10,5,10,10">
            <TextBlock Name="grid_MessageBox_Question" Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" TextWrapping="Wrap" Text="Question"/>
            <Border Name="grid_MessageBox_Border" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
            <TextBlock Name="grid_MessageBox_Description" Style="{StaticResource TextBlockGray}" TextWrapping="Wrap" Text="Description"/>
            <ListBox Name="listbox_MessageBox" Margin="0,5,0,0" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemBlack}" ItemTemplate="{StaticResource ListBoxItemString}" Style="{StaticResource ListBoxVertical}" PreviewKeyUp="ListBox_MessageBox_PreviewKeyUp" PreviewMouseUp="ListBox_MessageBox_PreviewMouseUp"/>
        </StackPanel>
    </Border>
</Window>